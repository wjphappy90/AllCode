<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.itcast.core.dao.product.BrandDao" >

	<select id="findBrandList" parameterType="cn.itcast.core.pojo.product.BrandQuery" resultType="cn.itcast.core.pojo.product.Brand">
		select id, name, description, img_url imgUrl, sort, is_display isDisplay 
		from bbs_brand 
		<where>
			<if test="name != null">
				name like '%${name}%'
			</if>
			<if test="isDisplay != null">
				and is_display=#{isDisplay}
			</if>
		</where>
	</select>
	
	<select id="findBrandPage" parameterType="cn.itcast.core.pojo.product.BrandQuery" resultType="cn.itcast.core.pojo.product.Brand">
		select id, name, description, img_url imgUrl, sort, is_display isDisplay 
		from bbs_brand 
		<where>
			<if test="name != null">
				name like '%${name}%'
			</if>
			<if test="isDisplay != null">
				and is_display=#{isDisplay}
			</if>
		</where>
		limit #{startRow}, #{pageSize}
	</select>
	
	<select id="findBrandPageCount" parameterType="cn.itcast.core.pojo.product.BrandQuery" resultType="int">
		select count(*)
		from bbs_brand 
		<where>
			<if test="name != null">
				name like '%${name}%'
			</if>
			<if test="isDisplay != null">
				and is_display=#{isDisplay}
			</if>
		</where>
	</select>
	
	<select id="findBrandById" parameterType="long" resultType="cn.itcast.core.pojo.product.Brand">
		select id, name, description, img_url imgUrl, sort, is_display isDisplay 
		from bbs_brand 
		where id=#{id}
	</select>
	
	<update id="updateBrand" parameterType="cn.itcast.core.pojo.product.Brand">
		update bbs_brand 
		<!-- set标签作用:
				可以在sql语句中自动添加set关键字
				可以去掉最后一个修改内容的逗号
		 -->
		<set>
			<if test="name != null">
				name=#{name},
			</if>
			<if test="description != null">
				description=#{description},
			</if>
			<if test="imgUrl != null">
				img_url=#{imgUrl},
			</if>
			<if test="sort != null">
				sort=#{sort},
			</if>
			<if test="isDisplay != null">
			 	is_display =#{isDisplay},
			</if>
		</set>
		where id=#{id}
	</update>
	
	<delete id="delBrandByIds" parameterType="long[]">
		delete from bbs_brand where
		<if test="array != null">
			<foreach collection="array" item="id" open="id in(" close=")" separator=",">
				#{id}
			</foreach>
		</if>
	</delete>
</mapper>